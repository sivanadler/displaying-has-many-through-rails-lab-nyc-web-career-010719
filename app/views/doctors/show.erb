<h1> <%= @doctor.name %>  </h1>
<h2> Department: <%= @doctor.department %> </h2>

<h4>Appointments:</h4>
<ul>
  <% @doctor.appointments.each do |appointment| %>
    <li> <%= appointment.format_date %></li>
      <li> Patient: <%= link_to appointment.patient.name, patient_path(appointment.patient) %></li>
    <br>
  <% end %>
</ul>
